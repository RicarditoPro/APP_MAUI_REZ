<h3>GenericList</h3>

@typeparam Titem

@if (MyList is null)
{
    @if (Loading is null)
    {
        <div class="align-items-center">


            <img src="https://cdn.pixabay.com/animation/2022/10/11/03/16/03-16-39-160_512.gif" />
        </div>

    }
    else
    {
        @Loading

    }
}
else
{
    @if (MyList.Count == 0)
    {
        @if (NoRecords is null)
        {
            <div class="align-items-center">
                <p> SORRYS NO HAY NADA QUE MOSTRAR</p>

            </div>
        }
        else
        {
            @NoRecords
        }
    }
    else
    {
        @Body
    }
}

@code {

    //parametros opcionales con ?
    [Parameter]
    public RenderFragment? Loading { get; set; }

    [Parameter]
    public RenderFragment? NoRecords { get; set; }

    //parametros obligatorios
    [Parameter]
    [EditorRequired]
    public RenderFragment Body { get; set; } = null!;

    [Parameter]
    [EditorRequired]
    public List<Titem> MyList { get; set; } = null!;

}
